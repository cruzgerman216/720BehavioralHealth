  </div>

  <!--end of first row-->
  <div class="row" style="height:4vh">
    <div class="col-4">

    </div>
    <div class="col-4">
        <%= Time.now.strftime("%A %B %M, %Y")%>
    </div>
    <div class="col-4 ">
    <%if authorized?%>
      <div class="nav justify-content-end">
          <%= link_to "Add new Case", new_case_path%> <span class="material-icons">assignment_ind</span> <span>  </span>
          <%= link_to "Add new Appointment", new_appointment_path%>  <span class="material-icons">note_add</span>
      </div>
    <%end%>
    </div>
  </div>

  <div class="row container" >
    <div class="container">
    <% Appointment.grab_days_of_month.each_slice(7) do |week|%>
      <div class="row"style="height:12vh" >
      <%week.map do |date|%>
        <div class="col-sm" style="padding: 10px; border: 1px black solid;">
          <%=date.to_s%>
          <br> 
          <% @appointments.each do |a|%>
            <%if a.date.strftime("%d") == date.to_s%>
                <%= link_to a.case.client.return_initials, appointment_path(a) %>
                <br>
            <%end%>
          <%end%>
        </div>
        <%end%>
      </div>
      <%end%>
    </div>
      </div>

      <div class="row" style="height:4vh">
          <div class="col-6">
            </div>
            <div class="col-6 ">
            <%if authorized?%>
              <div class="nav justify-content-end">
                  <%= link_to "My Cases", user_cases_path(current_user)%>    <%= link_to "My Appointments", user_appointments_path(current_user)%>
              </div>
            <%end%>
            </div>
      </div>
