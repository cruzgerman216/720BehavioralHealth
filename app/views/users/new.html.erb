<h1> Sign up</h1>


<%= form_for(@user, url: '/signup') do |f|%>


    <%= f.label :first_name%>
    <%= f.text_field :first_name%>
    <br>

    <%= f.label :last_name%>
    <%= f.text_field :last_name%>
    <br>

    <%= f.label :username%>
    <%= f.text_field :username%>
    <br>

    <%= f.label :email%>
    <%= f.email_field :email%>
    <br>

    <%= f.label :password%>
    <%= f.password_field :password%>
    <br>
    <%= f.select :role, options_for_select(User.roles.keys.map{|k| [k,k]})%>
    <br>
    <%= f.submit "Submit"%>
<% end %>